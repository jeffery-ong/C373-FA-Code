<header class="site-header">
  <div class="header-inner">
    <div class="brand">
      <a href="/">ZacDelivery</a>
    </div>

    <nav class="nav-links">
      <a class="<%= activePage === 'home' ? 'active' : '' %>" href="/">Home</a>
      <a class="<%= activePage === 'track' ? 'active' : '' %>" href="/track">Track Parcel</a>
      <a class="<%= activePage === 'create' ? 'active' : '' %>" href="/create">Create</a>
      <a class="<%= activePage === 'about' ? 'active' : '' %>" href="/aboutus">About</a>
    </nav>

    <form class="search-bar" action="/trackdelivery" method="GET" aria-label="Search tracking">
      <input
        type="text"
        name="trackingId"
        placeholder="Enter tracking ID"
        autocomplete="off"
        required
      />
      <button type="submit" class="btn btn-primary btn-chip">Go</button>
    </form>
  </div>
</header>
