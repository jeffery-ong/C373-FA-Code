<header class="site-header">
  <div class="header-inner">
    <div class="brand">
      <div class="logo-badge" aria-hidden="true">
        <svg viewBox="0 0 24 24">
          <path
            d="M12 2 3 6.5v11L12 22l9-4.5v-11L12 2zm0 2.4 6.7 3.3L12 11 5.3 7.7 12 4.4zm-7 5.6 6.7 3.3v7.2L5 17.2v-7.2zm14 0v7.2l-6.7 3.3v-7.2L19 10z"
          />
        </svg>
      </div>
      ZacDelivery
    </div>

    <nav class="nav-links">
      <a class="<%= activePage === 'home' ? 'active' : '' %>" href="/">Home</a>
      <a class="<%= activePage === 'track' ? 'active' : '' %>" href="/track">Track Parcel</a>
      <a class="<%= activePage === 'about' ? 'active' : '' %>" href="/aboutus">About Us</a>
    </nav>

    <div class="header-actions">
      <label class="search-bar" aria-label="Search tracking">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
          <path
            d="M11 4a7 7 0 1 0 4.9 12l3.6 3.6 1.4-1.4-3.6-3.6A7 7 0 0 0 11 4zm0 2a5 5 0 1 1 0 10 5 5 0 0 1 0-10z"
            fill="#5a6a85"
          />
        </svg>
        <input type="text" placeholder="Enter tracking ID..." />
      </label>
      <div class="user-icon" aria-hidden="true">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none">
          <path
            d="M12 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4zm-7 9a7 7 0 0 1 14 0"
            stroke="#5a6a85"
            stroke-width="2"
            stroke-linecap="round"
          />
        </svg>
      </div>
    </div>
  </div>
</header>
