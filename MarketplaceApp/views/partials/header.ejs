<header class="site-header">
  <div class="header-inner">
    <div class="brand">
      <a href="/">ZacDelivery</a>
    </div>

    <nav class="nav-links">
      <a
        class="<%= activePage === 'home' ? 'active' : '' %>"
        href="/"
        data-admin-hidden="true"
      >
        Home
      </a>
      <a
        class="<%= activePage === 'my' ? 'active' : '' %>"
        href="/my-deliveries"
        data-admin-hidden="true"
      >
        My Deliveries
      </a>
      <a
        class="<%= activePage === 'create' ? 'active' : '' %>"
        href="/create"
        data-admin-hidden="true"
      >
        Create
      </a>
      <a
        class="<%= activePage === 'about' ? 'active' : '' %>"
        href="/aboutus"
        data-admin-hidden="true"
      >
        About
      </a>
    </nav>

    <a
      class="btn <%= activePage === 'admin' ? 'btn-primary' : 'btn-ghost' %> btn-chip admin-nav-link <%= activePage === 'admin' ? 'active' : '' %>"
      href="/admin"
      data-admin-only="true"
      style="display: none;"
    >
      Dashboard
    </a>

    <a
      class="btn <%= activePage === 'completed' ? 'btn-primary' : 'btn-ghost' %> btn-chip admin-nav-link <%= activePage === 'completed' ? 'active' : '' %>"
      href="/completed-deliveries"
      data-admin-only="true"
      style="display: none;"
    >
      Completed
    </a>

    <div class="nav-account">
      <span class="account-label">Account:</span>
      <strong id="accountAddress">Not connected</strong>
      <button class="btn btn-primary btn-chip" id="connectButton" type="button">
        Connect
      </button>
    </div>

  </div>
</header>
