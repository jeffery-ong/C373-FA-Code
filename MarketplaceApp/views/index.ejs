<!DOCTYPE html>
<html>
  <head>
    <title>Blockchain Marketplace</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-dark bg-dark px-4">
      <span class="navbar-brand">Blockchain Marketplace</span>
      <div class="d-flex align-items-center gap-2">
        <span class="text-white">Account:</span>
        <span class="text-white" id="accountAddress">Not connected</span>
        <button class="btn btn-outline-light btn-sm" id="connectButton">
          Connect Wallet
        </button>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="alert alert-info d-none" id="statusMessage"></div>

      <!-- CREATE ORDER -->
      <div class="card mb-4">
        <div class="card-header fw-bold">Create New Order (Payment Escrow)</div>
        <div class="card-body">
          <form id="createOrderForm">
            <div class="mb-3">
              <label class="form-label">Seller Address</label>
              <input
                type="text"
                name="seller"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label">Amount (ETH)</label>
              <input
                type="number"
                step="0.01"
                min="0"
                name="amount"
                class="form-control"
                required
              />
            </div>
            <button class="btn btn-primary" type="submit">Create Order</button>
          </form>
        </div>
      </div>

      <!-- ORDER LIST -->
      <div class="card">
        <div class="card-header fw-bold">
          Orders (Shipping & Delivery Tracking)
        </div>
        <div class="card-body">
          <div id="ordersList"></div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/web3@4.16.0/dist/web3.min.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
